app-signup
  padding 0 2vw
  form
    display: flex
    flex-direction: column
    align-items: center
    input, button
      width 100%
      height 36px
      margin 1px 0
      padding 6px
      font-size 14px
      font-weight 400
      border: 1px solid rgba(0,0,0,.2)
      box-sizing: border-box
    button
      cursor pointer
      color white
      background-color #08b0699e
