:host
  display flex
  justify-content space-between
  align-items center
  background-color: #00bbd2
  position: fixed
  padding 0 6vw
  box-sizing: border-box
  width: 100vw
  height: 6vh
  z-index: 1
  app-icon
    width 30px
    height 30px
    fill white
    &:hover
      fill #818185
  span
    color: white
    font-size: 24px
    user-select none
  .name:first-letter
    color: red
  .menu-container
    position relative
    button
      border none
      background-color: transparent
      cursor pointer
    .menu-button
      transition transform 0.3s
    .menu
      position absolute
      top 6vh
      right 0
      display flex
      flex-direction column
      width max-content
      padding: 10px 5px
      transform translateY(-100vh)
      transition transform 0.3s
      background-color: #00bbd2
      button
        margin 2px
        font-size 18px
        border 1px solid white
        color: white
        &:hover
          background-color white
          color rgba(0,0,0,.5)
  & .menu-active
      .menu-button
        transform rotate(90deg)
      .menu
        transform translateY(0px)
