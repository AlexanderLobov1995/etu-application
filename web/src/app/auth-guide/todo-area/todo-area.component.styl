:host
  width 80%
  .user-info
    display: flex
    justify-content: space-between
  button
    border none
    outline none
    cursor pointer
    font-size 18px
  .todo-list
    &.isLoading
      display none
  .tab
    display flex
    button
      padding 10px
      background-color transparent
      border-bottom 2px solid #e8e8e8
    & .active
      border-color #00bbd2
      color #00bbd2
  .list
    border 2px solid #e8e8e8
    margin 10px 0
    .item
      display flex
      justify-content space-between
      align-items center
      min-height 46px
      font-size 24px
      border-bottom 2px solid #e8e8e8
      button
        background-color transparent
        app-icon
          width 20px
          height 20px
          &:hover
            background-color #e8e8e8
            border 1px solid #e8e8e8
            border-radius 100%
      input[type="checkbox"]
        width: 18px
        height 18px
        margin 0 18px
        cursor pointer
    & .completed
      text-decoration line-through
    & .selected
      background-color #00bbd2
  .button-content
    button
      background-color transparent
      border 3px solid #e8e8e8
      &:hover
        background-color #e8e8e8

  mat-progress-spinner
    stroke #00bbd2
    margin auto
