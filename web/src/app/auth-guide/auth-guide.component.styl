:host
  color #818185
  font-size 16px
  .content
    display: flex
    width: 100vw
    height: 100vh
    overflow-y: hidden
    background-color whitesmoke
    .page-content
      transition: transform 0.5s;
      width 100vw
      .page
        margin-top 6vh
        padding-left 6vw
        height: calc(100vh - 6vh)
        overflow auto
        img
          border-radius: 12px
        h1
          color: #00bbd2
      .page-1
        display flex
        justify-content space-between
        .auth-content
          display: flex
      pre
        background-color #e2e2e2
        border: 1px solid #ccc
        white-space: pre-wrap
