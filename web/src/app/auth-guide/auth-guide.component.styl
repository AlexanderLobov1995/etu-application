:host
  color #818185
  font-family 'Lato', sans-serif, Arial, Helvetica
  font-size 16px
  .content
    display: flex
    width: 100vw
    height: 100vh
    overflow-y: hidden
    background-color whitesmoke
    .page-content
      transition: transform 0.5s;
      width 100vw
      .page
        margin-top 9vh
        padding: 0 6vw
        height: calc(100vh - 9vh)
        overflow auto
        img
          border-radius: 12px
        h1
          color: #00bbd2
      .page-1
        display flex
        justify-content space-between
        .auth-content
          display: flex
      pre
        background-color #e2e2e2
        border: 1px solid #ccc
        white-space: pre-wrap
